  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Covid19Doctor
  
  # reactive
  pod 'RxSwift'
  pod 'RxRelay'
  pod 'RxCocoa'
  pod 'RxSwiftExt'
  pod 'RxGesture'
  pod 'RxAppState'
  
