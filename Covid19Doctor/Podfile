  pod 'KWVerificationCodeView'
  pod 'PhoneNumberKit'
  pod 'Toast-Swift'
  pod 'FittableFontLabel'
  pod 'DropDown'
  
  # crash reporting
  pod 'Sentry', '4.5.0'

end
